<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setup_iot_node"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apptheme_blue"
    android:orientation="vertical"
    tools:context="cc.seeed.iot.ui_setnode.SetupIotNodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/set_node"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/grove_list"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:id="@+id/grove_remove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_cancel"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/node_view"
            android:layout_width="204dp"
            android:layout_height="195dp"
            android:layout_centerInParent="true"
            android:background="@drawable/node_pcba"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/grove_1"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="45dp"
            android:layout_toLeftOf="@+id/node_view"
            android:layout_toStartOf="@+id/node_view"
            android:background="@drawable/state_grove_indicator"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/grove_2"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="90dp"
            android:layout_toLeftOf="@+id/node_view"
            android:layout_toStartOf="@+id/node_view"
            android:background="@drawable/state_grove_indicator"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/grove_3"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="135dp"
            android:layout_toLeftOf="@+id/node_view"
            android:layout_toStartOf="@+id/node_view"
            android:background="@drawable/state_grove_indicator"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/grove_4"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/node_view"
            android:layout_toRightOf="@+id/node_view"
            android:background="@drawable/state_grove_indicator"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/grove_5"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@+id/node_view"
            android:layout_toRightOf="@+id/node_view"
            android:background="@drawable/state_grove_indicator"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/grove_6"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="135dp"
            android:layout_toEndOf="@+id/node_view"
            android:layout_toRightOf="@+id/node_view"
            android:background="@drawable/state_grove_indicator"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/i2c_device_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="135dp"
            android:layout_toEndOf="@+id/grove_6"
            android:layout_toRightOf="@+id/grove_6"
            android:text="+2"
            android:textColor="@color/green" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grove_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/grove_selector"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grove_selector"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        android:visibility="gone"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/ib_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_cancel" />

        <TextView
            android:id="@+id/ib_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="48dp"
            android:gravity="center"
            tools:text="Grove_relay" />

        <ImageButton
            android:id="@+id/ib_correct"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_correct" />
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
