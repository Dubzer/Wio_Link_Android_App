<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2daddf"
    android:orientation="vertical"
    tools:context="cc.seeed.iot.ui_setnode.SetupIotNodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/set_node"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/grove_list"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/node_view"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            card_view:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/node_icon" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/grove_1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="50dp"
            android:layout_toStartOf="@+id/node_view"
            card_view:cardBackgroundColor="@android:color/transparent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/state_grove_indicator_left" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/grove_2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="100dp"
            android:layout_toStartOf="@+id/node_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/state_grove_indicator_left" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/grove_3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="150dp"
            android:layout_toStartOf="@+id/node_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grove_indicator_normal_left" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/grove_4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/node_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grove_indicator_normal_right" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/grove_5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/node_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grove_indicator_normal_right" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/grove_6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/node_view"
            android:layout_marginTop="150dp"
            android:layout_toEndOf="@+id/node_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grove_indicator_normal_right" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grove_list"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/grove_selector"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grove_selector"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/link_text_material_light">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        app:contentInsetEnd="16dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">

        <ImageButton
            android:id="@+id/ib_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/ic_cancel" />

        <ImageButton
            android:id="@+id/ib_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/ic_correct" />
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
