<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_write"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/warning" />

            </RelativeLayout>
            <cc.seeed.iot.view.FontTextView
                android:id="@+id/mTvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#3A4B71"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                app:cusTextFont="@string/Proxima_Nova_Semibold" />

            <cc.seeed.iot.view.FontTextView
                android:id="@+id/mTvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#777777"
                android:textSize="13sp"
                app:cusTextFont="@string/Proxima_Nova_Regular" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <cc.seeed.iot.view.FontButton
                    android:id="@+id/mTvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_long_bg"
                    android:elevation="5dp"
                    android:singleLine="true"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    app:cusButtonFont="@string/Proxima_Nova_Semibold" />

            </RelativeLayout>

            <cc.seeed.iot.view.FontButton
                android:id="@+id/mTvCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_withe_bg"
                android:elevation="5dp"
                android:singleLine="true"
                android:text="Don't remind me again"
                android:textAllCaps="false"
                android:textColor="#3A4B71"
                android:textSize="14sp"
                app:cusButtonFont="@string/Proxima_Nova_Semibold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>