<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="33dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mIvGrove"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:placeholderImage="@mipmap/grove_default"
            app:placeholderImageScaleType="fitXY"
            app:roundAsCircle="true"
            app:roundingBorderColor="#E7E7E7"
            app:roundingBorderWidth="1dp" />

        <RelativeLayout
            android:id="@+id/mRlRemove"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/remove" />

        </RelativeLayout>

        <cc.seeed.iot.view.FontTextView
            android:id="@+id/mTvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mRlRemove"
            android:layout_toRightOf="@id/mIvGrove"
            android:singleLine="true"
            android:text="GROVE - RED LED"
            android:textColor="#A6000000"
            android:textSize="14sp"
            app:cusTextFont="@string/Proxima_Nova_Semibold" />


    </RelativeLayout>
</RelativeLayout>